<html lang="en"
      xmlns:tal="http://common-lisp.net/project/bese/tal/core">
  <head>
    <title>Home Automation Madness</title>
    <link href="style.css" rel="stylesheet" type="text/css"></link>
  </head>
  <body>
    <div>Controls x10 devices</div>
    <table>
      <tbody>
	<tr tal:dolist="$devices">
	  <td tal:content="$name"></td>
	  <td><a href="${$on-url}">ON</a></td>
	  <td><a href="${$off-url}">OFF</a></td>
	</tr>
      </tbody>
    </table>
    <p tal:content="$status">Parameter will go here.</p>
  </body>
</html>
